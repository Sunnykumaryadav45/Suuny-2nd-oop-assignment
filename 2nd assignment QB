// Rectangle.java

public class Rectangle {
    // Attributes
    private float length;
    private float width;

    // Constructors
    public Rectangle() {
        this.length = 1.0f;
        this.width = 1.0f;
    }

    public Rectangle(float length, float width) {
        this.length = length;
        this.width = width;
    }

    // Getter and Setter methods
    public float getLength() {
        return length;
    }

    public void setLength(float length) {
        this.length = length;
    }

    public float getWidth() {
        return width;
    }

    public void setWidth(float width) {
        this.width = width;
    }

    // Other methods
    public double getArea() {
        return length * width;
    }

    public double getPerimeter() {
        return 2 * (length + width);
    }

    @Override
    public String toString() {
        return "Rectangle[length=" + length + ", width=" + width + "]";
    }

    // Main method for testing (optional)
    public static void main(String[] args) {
        Rectangle rectangle1 = new Rectangle();
        System.out.println(rectangle1); // Output: Rectangle[length=1.0, width=1.0]

        Rectangle rectangle2 = new Rectangle(5.0f, 3.0f);
        System.out.println(rectangle2); // Output: Rectangle[length=5.0, width=3.0]

        rectangle2.setLength(7.5f);
        rectangle2.setWidth(4.2f);
        System.out.println("Length: " + rectangle2.getLength()); // Output: Length: 7.5
        System.out.println("Width: " + rectangle2.getWidth());   // Output: Width: 4.2

        System.out.println("Area: " + rectangle2.getArea());         // Output: Area: 31.5
        System.out.println("Perimeter: " + rectangle2.getPerimeter()); // Output: Perimeter: 23.4
    }
}
